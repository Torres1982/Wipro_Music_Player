<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize the Theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/casper_regular</item>
        <item name="fontFamily">@font/casper_regular</item>
    </style>

    <!-- Customize the Action Bar -->
    <style name="Dark.Overlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/red</item>
    </style>

    <style name="Dark.Overlay.LightPopup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/cyan</item>
    </style>
</resources>