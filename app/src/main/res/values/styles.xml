<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize the Theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/casper_regular</item>
        <item name="fontFamily">@font/casper_regular</item>
        <!-- Customize the Action Bar -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <!-- Customize the Divider for Menu Items -->
        <item name="android:dropDownListViewStyle">@style/ActionBarMenuDivider</item>
    </style>

    <!-- Set the Background Color of the Bar to red -->
    <style name="CustomActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/red</item>
        <item name="titleTextStyle">@style/CustomActionBarTitle</item>
        <item name="popupTheme">@style/ActionBarMenu</item>
    </style>

    <!-- Set the Title Text Color of the Bar to light color -->
    <style name="CustomActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/light_green</item>
    </style>

    <!-- Set the Menu Bar Colours -->
    <style name="ActionBarMenu">
        <item name="android:textColor">@color/light_green</item>
        <item name="android:background">@color/red</item>
    </style>

    <!-- Set Up the Divider for Menu Items -->
    <style name="ActionBarMenuDivider" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/light_green</item>
        <item name="android:dividerHeight">@dimen/menu_items_divider</item>
    </style>
</resources>